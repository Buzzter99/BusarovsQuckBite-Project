@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel
<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-md-8 col-lg-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center mb-5">Log In</h2>
                        <form asp-area="AccountManager" asp-controller="Users" asp-action="Login" method="post">
                            <div class="form-group mb-3">
                                <label class="form-label" for="Username">Username / Email</label>
                                <input asp-for="Username" type="text" id="Username" class="form-control form-control-lg" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="Password">Password</label>
                                <input asp-for="Password" type="password" id="Password" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="checkbox">
                                <label asp-for="RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                            <div class="d-grid">
                                <input type="submit" class="btn btn-primary btn-lg gradient-custom-4 text-body" value="Log In">
                            </div>
                            <p class="text-center text-muted mt-3 mb-0">
                                Forgot Password? <a asp-controller="Manage" asp-action="ForgotPassword" asp-area="AccountManager" class="fw-bold text-body"><u>Recover Password</u></a>
                            </p>
                            <p class="text-center text-muted mt-3 mb-0">
                                Don't have an account? <a asp-controller="Users" asp-action="Register" asp-area="AccountManager" class="fw-bold text-body"><u>Register</u></a>
                            </p>
                            <p class="text-center text-muted mt-3 mb-0">
                                Email not confirmed? <a asp-controller="Manage" asp-action="ResendEmailConfirmation" asp-area="AccountManager" class="fw-bold text-body"><u>Resend Email Confirmation</u></a>
                            </p>
                            <p class="text-center text-muted mt-3 mb-0">
                                Forgot Username? <a asp-controller="Manage" asp-action="ResetUsername" asp-area="AccountManager" class="fw-bold text-body"><u>Reset It From Here</u></a>
                            </p>
                            @{
                                await Html.RenderPartialAsync("_MessagePartial", TempData);
                            }
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}