@{
    ViewData["Title"] = "Register";
}
@model RegisterFormViewModel
<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-md-8 col-lg-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center mb-5">Register To Make an Order</h2>
                        <form asp-area="AccountManager" asp-controller="Users" asp-action="Register" method="post">
                            <div class="form-group mb-3">
                                <label class="form-label" for="Username">Username</label>
                                <input asp-for="Username" type="text" id="Username" class="form-control form-control-lg"/>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="Email">Email</label>
                                <input asp-for="Email" type="email" id="Email" class="form-control form-control-lg"/>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="PhoneNumber">Enter your phone number</label>
                                <input asp-for="PhoneNumber" type="text" id="PhoneNumber" class="form-control form-control-lg" />
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="Password">Password</label>
                                <input asp-for="Password" type="password" id="Password" class="form-control form-control-lg"/>
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label" for="Password">Confirm your provided password</label>
                                <input asp-for="ConfirmPassword" type="password" id="" class="form-control form-control-lg"/>
                            </div>
                            <div class="d-grid">
                                <input type="submit" class="btn btn-primary btn-lg gradient-custom-4 text-body" value="Create Account">
                            </div>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <p class="text-center text-muted mt-3 mb-0">
                                Already have an account? <a asp-controller="Users" asp-action="Login" asp-area="AccountManager" class="fw-bold text-body"><u>Login here</u></a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}