@using BusarovsQuckBite.Constants
@model AdministrationViewModel
<tr>
    <td>@Model.Username</td>
    <td>@Model.Email</td>
    <td>@Model.FirstName</td>
    <td>@Model.LastName</td>
    <td>@Model.PhoneNumber</td>
    <td>@Model.TransactionDateAndTime.ToString(DateFormatConstants.DefaultDate)</td>
    <td>@string.Join(", ", @Model.Roles.Select(c => c.Name))</td>
    <td>@Html.ActionLink("Edit", "Edit", "Administration", new { id = @Model.Id,email = @Model.Email,username = @Model.Username,phonenumber = @Model.PhoneNumber, firstName = @Model.FirstName, lastName = @Model.LastName }, new { @class = "btn btn-primary" })</td>
    <td>@Html.ActionLink($"{(Model.IsActive ? "Deactivate" : "Activate")}", "ManageAccess", "Administration", new { id = @Model.Id, keyword = ViewBag.Keyword }, new { @class = $"{(Model.IsActive ? "btn btn-danger" : "btn btn-success")}" })</td>
    <td>@Html.ActionLink("Password", "ChangePassword", "Administration", new { id = @Model.Id }, new { @class = "btn btn-secondary" })</td>
    <td>@Html.ActionLink("Roles", "ManageRoles", "Administration", new { id = @Model.Id }, new { @class = "btn btn-primary" })</td>
</tr>