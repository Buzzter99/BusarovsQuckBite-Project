@using BusarovsQuckBite.Models.Enums
@model List<AdministrationViewModel>
<div class="d-flex justify-content-center">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item me-5" role="presentation">
            @Html.ActionLink(FilterEnum.All.ToString(), "Index", "Administration", new { keyword = FilterEnum.All }, new { @class = "nav-link btn btn-lg px-5 " + (ViewBag.Keyword == FilterEnum.All ? "active" : "") })
        </li>
        <li class="nav-item me-5" role="presentation">
            @Html.ActionLink(FilterEnum.Active.ToString(), "Index", "Administration", new { keyword = FilterEnum.Active }, new { @class = "nav-link btn btn-lg px-5 " + (ViewBag.Keyword == FilterEnum.Active ? "active" : "") })
        </li>
        <li class="nav-item me-5" role="presentation">
            @Html.ActionLink(FilterEnum.Deleted.ToString(), "Index", "Administration", new { keyword = FilterEnum.Deleted }, new { @class = "nav-link btn btn-lg px-5 " + (ViewBag.Keyword == FilterEnum.Deleted ? "active" : "") })
        </li>
    </ul>
</div>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
        <table class="table">
            @{
                await Html.RenderPartialAsync("_UsersPartialHeader");
            }
            <tbody>
                @foreach (var entity in Model)
                {
                    await Html.RenderPartialAsync("_DataPartial", entity);
                }
            </tbody>
        </table>
    </div>
</div>
@{
    await Html.RenderPartialAsync("_PagingPartial");
    await Html.RenderPartialAsync("_MessagePartial", TempData);
}