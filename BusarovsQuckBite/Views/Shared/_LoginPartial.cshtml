@using Microsoft.AspNetCore.Identity
@using BusarovsQuckBite.Data.Models
@using BusarovsQuckBite.Services
@inject ApplicationSignInManager<ApplicationUser> SignInManager
@inject ApplicationUserManager<ApplicationUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <span class="navbar-text">Welcome, @UserManager.GetUserAsync(User).Result.UserName!</span>
        </li>
    </ul>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-area="AccountManager" asp-controller="Users" asp-action="Logout">Log Out</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-area="AccountManager" asp-controller="Users" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="AccountManager" asp-action="Register" asp-controller="Users">Register</a>
        </li>
    </ul>
}
