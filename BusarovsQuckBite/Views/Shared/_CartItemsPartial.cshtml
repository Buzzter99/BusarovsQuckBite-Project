@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductViewModel
<input type="hidden" asp-for="@Model.Id" />
<div class="card rounded-3 mb-4">
    <div class="card-body p-4">
        <div class="row d-flex justify-content-between align-items-center">
            <div class="col-md-2 col-lg-2 col-xl-2">
                <img src="@Url.Content(Model.ImageRelativePath)" class="card-img-top" style="max-width: 100%; max-height: 100%;" class="img-fluid rounded-3">
            </div>
            <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">@Model.Name</p>
            </div>
            <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                <input asp-for="@Model.QtyAvailable" min="1" max="@Model.QtyAvailable" value="1" type="number" class="form-control form-control-sm" />
            </div>
            <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">$@Model.Price</h5>
            </div>
            <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a asp-action="RemoveItemFromCart" asp-controller="Cart" asp-route-productId="@Model.Id" class="text-danger"><i class="fas fa-trash fa-2x"></i></a>
            </div>
        </div>
    </div>
</div>