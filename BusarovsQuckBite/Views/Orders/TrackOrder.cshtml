@model int
<div class="progress">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="@(Model / 4.0 * 100.0)" aria-valuemin="0" aria-valuemax="100" style="width: @(Model == 0 ? 15 : (Model / 4.0 * 100.0))%">
        @(Model == 0 ? 15 : (Model / 4.0 * 100.0))%
    </div>
</div>
<div style="margin-top: 20px;"></div>
@if (Model == 0)
{
    <div class="alert alert-info text-center" role="alert">
        Your order is being processed!
    </div>
} else if (Model == 1)
{
    <div class="alert alert-info text-center" role="alert">
        Your order is being prepared!
    </div>
}
else if (Model == 2)
{
    <div class="alert alert-info text-center" role="alert">
        Your order is ready for delivery and waiting on our hot shelves to be picked up by one of our drivers! 
    </div>
}
else if (Model == 3)
{
    <div class="alert alert-info text-center" role="alert">
        Your order is On the way. If there is any issue with your order your driver will write messages below.
    </div>
}
else if (Model == 4)
{
    <div class="alert alert-info text-center" role="alert">
        Your order is delivered!
    </div>
}
<div style="margin-top: 20px;"></div>
<a class="btn btn-primary btn-block btn-lg" asp-controller="Orders" asp-action="Orders">Back To My Orders</a>
<div style="margin-top: 20px;"></div>
<div class="alert alert-warning text-center" role="alert">
    Messages from delivery driver will appear here:
</div>

